{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.pyd": true,
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "cSpell.words": [
        "flowbite",
        "Flowbite",
        "Hoverable",
        "nowrap",
        "onchange",
        "nameof",
        "typeparam",
        "Blazor",
        "subcomponents"
    ],
    "markdown.extension.toc.updateOnSave": false,
    "peacock.color": "#345aac",
}