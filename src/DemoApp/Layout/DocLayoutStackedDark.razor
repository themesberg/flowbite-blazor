@inherits LayoutComponentBase
@using Flowbite.Components
@using Flowbite.Layout

<div class="bg-white text-gray-600 antialiased dark:bg-slate-950/70 dark:text-white">
    <div class="w-full min-w-0 flex-auto">
        <div class="relative">
            <DocLayoutNavbar IsCollapsed="@_isCollapsed" OnToggleCollapse="@HandleToggleCollapse" />
            
            <main class="h-screen mx-auto -mt-20 ">
                <div class="h-full pt-20">
                    <div class="h-full">
                        @Body
                    </div>
                </div>
            </main>

        </div>
    </div>
</div>

<ToastHost /> @* Add the ToastHost component here *@

@code {
    private bool _isCollapsed = true;

    private void HandleToggleCollapse()
    {
        _isCollapsed = !_isCollapsed;
        StateHasChanged();
    }
}
