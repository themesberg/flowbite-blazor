@page "/docs/components/navbar"
@using Flowbite.Components

<PageTitle>Navbar - Flowbite Blazor</PageTitle>

<main class="p-6 space-y-4 max-w-4xl">
    <h2>Navbar Examples</h2>
    <p class="text-lg text-gray-500 dark:text-gray-400">
        The Navbar component provides a responsive navigation bar with flexible configurations, including brand logos, links, toggles, and interactive elements.
    </p>

    <div class="space-y-8 divide-y divide-gray-200 dark:divide-gray-700">
        <ComponentExample Title="Default Navbar"
                          Description="Use this example of a navigation bar to enable users to navigate across your website with basic navigation links."
                          RazorCode=@(@"
<Navbar>
    <NavbarBrand Href=""/"">
        <img src=""/images/logo.svg"" class=""mr-3 h-6 sm:h-9"" alt=""Flowbite Logo"" />
        <span class=""self-center text-xl font-semibold whitespace-nowrap dark:text-white"">Flowbite</span>
    </NavbarBrand>
    <NavbarToggle />
    <NavbarCollapse>
        <NavbarLink Href=""/"" Active>Home</NavbarLink>
        <NavbarLink Href=""/about"">About</NavbarLink>
        <NavbarLink Href=""/services"">Services</NavbarLink>
        <NavbarLink Href=""/pricing"">Pricing</NavbarLink>
        <NavbarLink Href=""/contact"">Contact</NavbarLink>
    </NavbarCollapse>
</Navbar>")
                          SupportedLanguages="@(new[] { "razor" })">
            <PreviewContent>
                <Navbar>
                    <NavbarBrand Href="/">
                        <img src="/images/logo.svg" class="mr-3 h-6 sm:h-9" alt="Flowbite Logo" />
                        <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Flowbite</span>
                    </NavbarBrand>
                    <NavbarToggle />
                    <NavbarCollapse>
                        <NavbarLink Href="/" Active>Home</NavbarLink>
                        <NavbarLink Href="/about">About</NavbarLink>
                        <NavbarLink Href="/services">Services</NavbarLink>
                        <NavbarLink Href="/pricing">Pricing</NavbarLink>
                        <NavbarLink Href="/contact">Contact</NavbarLink>
                    </NavbarCollapse>
                </Navbar>
            </PreviewContent>
        </ComponentExample>

