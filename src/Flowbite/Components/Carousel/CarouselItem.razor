@inherits Flowbite.Base.FlowbiteComponentBase

<div class="@CombineClasses("duration-700 ease-in-out")" style="@GetStyle()" @attributes="AdditionalAttributes">
    @if (!string.IsNullOrEmpty(ImageSrc))
    {
        <img src="@ImageSrc" alt="@ImageAlt" title="@ImageTitle" class="@GetImageClass()" />
    }
    else if (ChildContent != null)
    {
        @ChildContent
    }
</div>
