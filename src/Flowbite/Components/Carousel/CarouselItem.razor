@using Flowbite.Base
@inherits FlowbiteComponentBase
@implements IDisposable

<div class="@CombineClasses()" style="@GetStyle()" @attributes="AdditionalAttributes">
    @if (!string.IsNullOrEmpty(ImageSrc))
    {
        <img src="@ImageSrc" alt="@ImageAlt" title="@ImageTitle" class="@GetImageClass()" />
    }
    else if (ChildContent != null)
    {
        @ChildContent
    }
</div>
