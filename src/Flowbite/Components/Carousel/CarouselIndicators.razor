@using Flowbite.Base
@inherits FlowbiteComponentBase

@if (CarouselState != null && CarouselState.TotalSlides > 1)
{
    <div class="@CombineClasses()">
        @for (int i = 0; i < CarouselState.TotalSlides; i++)
        {
            int index = i; // Capture for closure
            <button type="button"
                    class="@GetIndicatorButtonClass(index)"
                    aria-current="@(index == CarouselState.CurrentIndex ? "true" : "false")"
                    aria-label="@($"Slide {index + 1}")"
                    @onclick="@(() => HandleIndicatorClick(index))">
            </button>
        }
    </div>
}
