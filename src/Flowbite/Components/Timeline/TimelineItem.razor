@namespace Flowbite.Components
@inherits FlowbiteComponentBase

<li class="@ItemClasses" @attributes="AdditionalAttributes">
    @if (ShouldRenderConnector)
    {
        <div class="@ConnectorClasses" aria-hidden="true"></div>
    }

    @if (Order != TimelineOrder.Default)
    {
        if (OrientationContent is not null)
        {
            @OrientationContent
        }
        else
        {
            <div class="@IndicatorClasses">
                <svg aria-hidden="true" class="@IndicatorIconClasses" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
            </div>
        }
    }
    else if (!string.IsNullOrWhiteSpace(Date))
    {
        <time datetime="@Date" class="@TimeClasses">
            @DisplayDate
        </time>
    }

    @if (!string.IsNullOrWhiteSpace(Title))
    {
        <h3 class="@TitleClasses">
            @Title
        </h3>
    }

    @if (Order != TimelineOrder.Default && !string.IsNullOrWhiteSpace(Date))
    {
        <time datetime="@Date" class="@TimeClasses">
            @DisplayDate
        </time>
    }

    <div class="@ContentClasses">
        @ChildContent
    </div>

</li>
