@using Flowbite.Base
@inherits FlowbiteInputBase<string?>

<textarea class="@GetTextareaClasses()"
          @bind="CurrentValue"
          placeholder="@Placeholder"
          rows="@Rows"
          disabled="@Disabled"
          required="@Required"
          id="@_elementId"
          aria-describedby="@(HelperText != null ? $"helper-{_elementId}" : null)"
          data-testid="flowbite-textarea"
          style="@Style"
          @attributes="AdditionalAttributes"></textarea>
@if (!string.IsNullOrEmpty(HelperText))
{
    <div id="helper-@_elementId" class="@GetHelperTextClasses()" role="note">
        @HelperText
    </div>
}
