@inherits FlowbiteComponentBase
@implements IAsyncDisposable

<div class="@GetContainerClasses()"
     @onkeydown="HandleKeyDown"
     @onkeydown:preventDefault="@ShouldPreventDefault">
    <div data-floating-trigger="@Id">
        @if (CustomTrigger != null)
        {
            <div @onclick="@(args => ToggleDropdown(args))"
                 id="@Id"
                 aria-expanded="@IsOpen"
                 aria-haspopup="true">
                @CustomTrigger
            </div>
        }
        else
        {
            @if (Inline)
            {
                <button @onclick="@(args => ToggleDropdown(args))"
                        type="button"
                        class="@GetTriggerClasses()"
                        id="@Id"
                        aria-expanded="@IsOpen"
                        aria-haspopup="true">
                    @if (Label != null)
                    {
                        @Label
                    }
                    @if (ArrowIcon)
                    {
                        <svg class="ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    }
                </button>
            }
            else
            {
                <Button @onclick="@(args => ToggleDropdown(args))"
                       Type="ButtonType.Button"
                       Size="@GetButtonSize()"
                       Class="@(Slots?.Trigger)"
                       id="@Id"
                       aria-expanded="@IsOpen"
                       aria-haspopup="true">
                    <span class="inline-flex items-center">
                        @if (Label != null)
                        {
                            @Label
                        }
                        @if (ArrowIcon)
                        {
                            <svg class="ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        }
                    </span>
                </Button>
            }
        }
    </div>

    @if (IsOpen)
    {
        <CascadingValue Value="this">
            <div class="@GetMenuClasses()"
                 data-floating-element="@Id"
                 role="menu"
                 aria-orientation="vertical"
                 aria-labelledby="@Id">
                <div class="py-1 text-sm text-gray-700 dark:text-gray-200" role="none">
                    @ChildContent
                </div>
            </div>
        </CascadingValue>
    }
</div>
