
@inherits FlowbiteComponentBase
@implements IDisposable

<button type="button"
        class="@GetItemClasses()"
        role="menuitem"
        tabindex="@GetTabIndex()"
        aria-disabled="@(Disabled ? "true" : null)"
        @onclick="HandleClick"
        @onclick:stopPropagation="true"
        style="@Style"
        @attributes="AdditionalAttributes"
        disabled="@Disabled">
    @if (Icon != null)
    {
        <DynamicComponent Type="@Icon.GetType()" Parameters="@(new Dictionary<string, object> { { "Class", GetIconClasses() } })" />
    }
    @ChildContent
</button>
