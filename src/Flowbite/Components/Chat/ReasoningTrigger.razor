@inherits Flowbite.Base.FlowbiteComponentBase

<button type="button"
        class="@CombineClasses(BaseClasses)"
        @onclick="HandleClick"
        aria-expanded="@Context.IsOpen"
        @attributes="AdditionalAttributes">
    @if (ChildContent is not null)
    {
        @ChildContent
    }
    else
    {
        <InfoIcon class="h-4 w-4" aria-hidden="true" />
        <span>@GetMessage()</span>
        <ChevronDownIcon class="@GetChevronClasses()" aria-hidden="true" />
    }
</button>
