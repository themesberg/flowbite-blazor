@inherits Flowbite.Base.FlowbiteComponentBase

<button type="button"
        class="@CombineClasses(BaseClasses)"
        @onclick="HandleClick"
        aria-expanded="@SourcesContext.IsOpen"
        aria-controls="@ContentId"
        @attributes="AdditionalAttributes">
    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M6 4h9a3 3 0 0 1 3 3v11" />
        <path d="M6 4a3 3 0 0 0-3 3v11" />
        <path d="M6 18h9a3 3 0 0 1 3 3" />
        <path d="M6 18a3 3 0 0 0-3 3" />
    </svg>
    <span>@GetLabel()</span>
    <ChevronDownIcon class="@GetChevronClasses()" aria-hidden="true" />
</button>
