@namespace Flowbite.Components
@inherits Base.FlowbiteComponentBase

<div class="@ComputedClass" style="@Style" @attributes="AdditionalAttributes">
    @if (Image != null)
    {
        @* Image/illustration (no container, rendered directly) *@
        <div class="mb-4">
            @Image
        </div>
    }
    else if (ShowIconContainer)
    {
        @* Icon with circular background container *@
        <div class="rounded-full bg-gray-100 p-6 dark:bg-gray-700 mb-4">
            @if (Icon != null)
            {
                @Icon
            }
            else
            {
                <svg class="w-12 h-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                </svg>
            }
        </div>
    }
    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">
        @Title
    </h3>
    @if (!string.IsNullOrEmpty(Description))
    {
        <p class="text-gray-500 dark:text-gray-400 text-center max-w-sm mb-4">
            @Description
        </p>
    }
    @if (Action != null || SecondaryAction != null)
    {
        <div class="mt-4 flex flex-wrap items-center justify-center gap-3">
            @if (Action != null)
            {
                @Action
            }
            @if (SecondaryAction != null)
            {
                @SecondaryAction
            }
        </div>
    }
</div>
